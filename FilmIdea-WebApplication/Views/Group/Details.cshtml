@using System.Security.Claims
@model DetailsGroupModel
@{
    ViewBag.Title = $"{Model.Name} Details";
}

<style>
    /* Add your CSS styles here */
    .left-section {
        width: 35%;
        padding: 20px;
        box-sizing: border-box;
        border-right: 1px solid #ccc;
    }

    .right-section {
        flex: 1;
        padding: 20px;
        box-sizing: border-box;
    }

    .chat-box {
        height: 400px;
        border: 1px solid #ccc;
        padding: 10px;
        overflow-y: auto;
    }

    .message {
        padding: 5px 10px;
        border-bottom: 1px solid #ccc;
    }

        .message.sender {
            background-color: #f1f1f1;
        }

        .message.receiver {
            background-color: #d9f7ff;
        }

    .movie-card {
        background-color: #f8f8f8;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .user-list {
        list-style: none;
        padding: 0;
        margin: 10px 0;
    }

        .user-list li {
            margin-bottom: 5px;
        }

    .hr {
        height: 1px;
        margin-left: -52px;
        margin-right: -6.5%;

    }
    /*.input{
        margin-top: 10px;
        margin-bottom: 10px
        }*/
</style>

<div style="margin-left: -7%">
    <div style="display: flex; justify-content: space-between;">
        <div class="left-section" style="width: 25%">
            <div class="row m-0">
                <div class="col-md-6 m-0">
                    <button id="addUserButton">Add Users</button>
                </div>
                <div class="col-md-6 m-0">
                    <button id="leaveGroupButton">Leave Group</button>
                </div>
            </div>
            <hr class="hr"/>
            <div class="row">
                <h2>Chat</h2>
                <div class="chat-box">
                    @foreach (var message in Model.Chat.Messages)
                    {
                        if (User.FindFirstValue(ClaimTypes.NameIdentifier) == message.SenderId)
                        {
                            <p>@message.SendAt</p>
                            <div class="message">
                                <p>@message.SenderName</p>
                                <div class="content">
                                    @message.Content
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>@message.SendAt</p>
                            <div class="message">
                                <p>@message.SenderName</p>
                                <div class="content">
                                    @message.Content
                                </div>
                            </div>
                        }
                    }
                </div>
                <input type="text" id="messageInput" class="mt-2 mb-2" placeholder="Enter message..."/>
                <button id="sendMessageButton">Send</button>
            </div>
        </div>

        <div class="right-section">
            <h2>Group Watchlist</h2>
            
                <partial name="_MoviesPartial" model="Model.Watchlist"/>
            

            <button id="leaveGroupButton">Leave Group</button>
            <button id="addUserButton">Add Users to Group</button>
        </div>
    </div>
</div>

<script>
    // Add your JavaScript code here for sending messages, leaving the group, and adding users.
</script>
