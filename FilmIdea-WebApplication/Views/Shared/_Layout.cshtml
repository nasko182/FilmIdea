@{
    var currentPage = Context.Request.Path.ToString().ToLower();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        @if (this.User.Identity.IsAuthenticated)
        {
            if (currentPage is "/" or "/home/index")
            {
                <partial name="Logged/_HomeNavPartial" />
            }
            else
            {
                <partial name="Logged/_NavPartial"/>
            }
        }
        else
        {
            if (currentPage is "/" or "/home/index")
            {
                <partial name="NotLogged/_HomeNavPartial" />
            }
            else
            {
                <partial name="NotLogged/_NavPartial" />
            }
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>