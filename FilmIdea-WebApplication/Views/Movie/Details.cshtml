@model MovieDetailsViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*TODO:Edit view to look better*@
@*TODO:Edit Swipe View Add Link to details on movie*@

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <img src="@Model.CoverImageUrl" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-9">
            <h2>@Model.Title (@Model.ReleaseYear)</h2>
            <p class="lead">Duration: @Model.Duration</p>
            <p class="lead">Rating: @Model.Rating</p>
            <p class="lead">User Rating: @Model.UserRating</p>
            <a href="@Model.TrailerUrl" target="_blank" class="btn btn-primary btn-sm">Watch Trailer</a>
            <button class="btn btn-secondary btn-sm watchlist-button" data-movie="@Model.Id">
                <i class="fas fa-plus"></i> Add to Watchlist
            </button>
        </div>
    </div>

    <hr>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Description</h3>
            <p class="lead">@Model.Description</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <h3>Directors</h3>
            <a class="" asp-area="" asp-controller="Director" asp-action="Details" asp-route-directorId="@Model.Director.Id">@Model.Director.Name</a>
        </div>
        <div class="col-md-4">
            <h3>Actors</h3>
            <ul class="list-unstyled">
                @foreach (var actor in Model.Actors)
                {
                    <li><a class="" asp-area="" asp-controller="Actor" asp-action="Details" asp-route-actorId="@actor.Id">@actor.Name</a></li>
                }
            </ul>
        </div>
        <div class="col-md-4">
            <h3>Genres</h3>
            <ul class="list-unstyled">
                @foreach (var genre in Model.Genres)
                {
                    <li><a class="" asp-area="" asp-controller="Movie" asp-action="ByGenre" asp-route-genreId="@genre.Id">@genre.Name</a></li>
                }
            </ul>
        </div>
    </div>

    <div class="container mt-5">
        <!-- ... existing content ... -->

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="d-flex  align-items-center">
                    <h3>Reviews</h3>

                    <button id="addReviewButton" class="btn btn-primary m-lg-3">Add Review</button>
                </div>

                <div id="addReviewForm" style="display: none;">
                    <form asp-action="AddReview" id="reviewForm">
                        <div class="form-group">
                            <label for="Rating">Rating</label>
                            <input type="number" class="form-control" id="Rating" name="Rating" min="1" max="10" required>
                        </div>
                        <div class="form-group">
                            <label for="Content">Content</label>
                            <textarea class="form-control" id="Content" name="Content" rows="3" required></textarea>
                        </div>

                        <input type="hidden" id="movieId" name="movieId" value="@Model.Id">

                        <button type="submit" class="btn btn-primary mt-3 mb-3">Add Review</button>
                    </form>
                </div>

                <div class="card-columns">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card">
                            <div class="card-body">
                                <p class="card-font">@review.Content</p>
                                <p>Rating: @review.Rating</p>
                                <p>Review Date: @review.ReviewDate</p>
                                <p>Critic: @review.CriticName</p>

                                <!-- Edit Button -->
                                @if (User.Identity.IsAuthenticated && review.CriticId == ViewBag.CriticId )
                                {
                                    <button class="btn btn-sm btn-primary edit-review-button" data-review-id="@review.Id">Edit</button>
                                }

                                <!-- Delete Button -->
                                @if (User.Identity.IsAuthenticated && review.CriticId == ViewBag.CriticId)
                                {
                                    <button class="btn btn-sm btn-danger delete-review-button" data-review-id="@review.Id">Delete</button>
                                }

                                    <button class="btn btn-sm btn-success add-comment-button" data-review-id="@review.Id">Add Comment</button>
                                

                                <!-- Comments -->
                                <div class="comments mt-3">
                                    @foreach (var comment in review.Comments)
                                    {
                                        <div class="card bg-light mb-2">
                                            <div class="card-body">
                                                <p class="card-text">@comment.Content</p>
                                                <p class="small mb-0 text-muted">@comment.WriterName</p>
                                                <p class="small mb-0 text-muted">@comment.CommentDate</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/movieDetails.js"></script>
}
