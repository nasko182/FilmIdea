@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AllMoviesViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Full list of Movies";

    var movies = Model.TopMovies.ToList();
}
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < movies.Count(); i++)
        {
            var movie = movies[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@movie.PictureUrl" alt="@movie.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Movie" asp-action="Details"
                           asp-route-movieId="@movie.Id">@movie.Title</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="m-5 center-container">
    <h3>All Movies</h3>
</div>

<partial name="_MoviesPartial" model="Model.Movies"/>

